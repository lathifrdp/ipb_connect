<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/putih"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                tools:text="Judul Proposal"
                android:textColor="#000000"
                android:id="@+id/judul_crowd_alumni"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/icon_lokasi"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/lokasi"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/lokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi"
                android:textColor="#000000"
                android:layout_toRightOf="@id/icon_lokasi"
                android:layout_marginLeft="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lokasi_crowd_alumni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:layout_toRightOf="@id/icon_lokasi"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/lokasi" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/icon_project"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/group"
                    android:scaleType="fitXY" />
                <TextView
                    android:id="@+id/project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipe Proyek"
                    android:textColor="#000000"
                    android:layout_toRightOf="@id/icon_project"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/project_crowd_alumni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pribadi atau kelompok"
                    android:textColor="#000000"
                    android:layout_toRightOf="@id/icon_project"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/project"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/icon_donasi"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/kredit"
                    android:scaleType="fitXY" />
                <TextView
                    android:id="@+id/donasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donasi"
                    android:textColor="#000000"
                    android:layout_toRightOf="@id/icon_donasi"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@id/icon_donasi"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/donasi">

                    <TextView
                        android:id="@+id/donasi_crowd_alumni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current"
                        android:textStyle="bold"
                        android:textColor="@color/merah" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dari target"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/hitam" />

                    <TextView
                        android:id="@+id/donasi_total_crowd_alumni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Total"
                        android:textColor="#10cc0d" />

                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:id="@+id/deskripsi"
                android:text="Deskripsi"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/deskripsi_crowd_alumni"
                android:paddingLeft="10dp"
                tools:text="isinya"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/infokontak"
                android:text="Kontak"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/kontak_crowd_alumni"
                android:paddingLeft="10dp"
                tools:text="isinya"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="italic"
                android:layout_marginTop="20dp"
                android:textColor="@color/merah"
                android:text="Setelah melakukan transfer, diharapkan mengunggah bukti transfer dengan menekan tombol unggah bukti."/>

            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/crowd_donasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Unggah Bukti"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="deadline"
                android:id="@+id/crowd_deadline"
                android:textColor="@color/merah"
                android:textStyle="italic"
                android:gravity="center_horizontal"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="1dp"
                android:background="#ddd"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:id="@+id/posting"
                android:text="Diposting oleh:"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/fotonya"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:elevation="5dp"
                android:scaleType="centerCrop"/>
                <!--<ImageView-->
                    <!--android:layout_width="100dp"-->
                    <!--android:layout_height="100dp"-->
                    <!--android:id="@+id/fotonya"-->
                    <!--android:layout_marginLeft="20dp"-->
                    <!--android:layout_marginTop="10dp"-->
                    <!--android:src="@drawable/alumni2"-->
                    <!--android:scaleType="fitXY"/>-->
                <TextView
                    android:id="@+id/namanya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:layout_toRightOf="@id/fotonya"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/studinya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Studi"
                    android:layout_toRightOf="@id/fotonya"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/namanya" />

                <TextView
                    android:id="@+id/angkatannya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Angkatan"
                    android:layout_toRightOf="@id/fotonya"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/studinya" />
            </RelativeLayout>
            
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>