<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- mengatur width dan warna border -->
    <stroke
        android:width="2dp"
        android:color="@color/merah" />

    <solid
        android:color="@color/merah"
        />

    <!-- mengatur radius dari bordernya -->
    <corners android:radius="30dp" />

    <!-- mengatur paddingnya -->
    <padding
        android:left="20dp"
        android:top="10dp"
        android:right="20dp"
        android:bottom="10dp"    >
    </padding>

</shape>